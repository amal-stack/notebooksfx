<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>
<?import org.controlsfx.control.MasterDetailPane?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
      fx:controller="com.amalstack.notebooksfx.notebook.NotebooksController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Close"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" text="Delete"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About"/>
        </Menu>
    </MenuBar>
    <ToolBar prefHeight="40.0" prefWidth="200.0">
        <Button fx:id="notebookCreateButton" mnemonicParsing="false" text="New..."/>
        <Separator orientation="VERTICAL"/>
        <TextField fx:id="searchTextField" promptText="Search notebooks..."/>
        <Button fx:id="searchTextClearButton" mnemonicParsing="false" text="Clear"/>
        <Separator orientation="VERTICAL"/>
        <TextFlow/>
    </ToolBar>

    <MasterDetailPane fx:id="masterDetailPane" dividerPosition="0.6" VBox.vgrow="ALWAYS">
        <masterNode>
        </masterNode>
        <detailNode>
            <VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
                  xmlns="http://javafx.com/javafx/18">
                <Label fx:id="notebookTitleLabel" text="Label">
                    <font>
                        <Font name="System Bold" size="48.0"/>
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="25.0"/>
                    </padding>
                </Label>
                <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="notebookOpenButton" mnemonicParsing="false" text="Open"/>
                        <Button fx:id="notebookEditButton" mnemonicParsing="false" text="Edit"/>
                        <Button fx:id="notebookDeleteButton" mnemonicParsing="false" text="Delete"/>
                    </buttons>
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                    </padding>
                </ButtonBar>
                <Label fx:id="notebookDescLabel" text="Label" textFill="#00000080">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </VBox>
        </detailNode>
    </MasterDetailPane>
</VBox>
